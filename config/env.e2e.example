# Example env for the Docker E2E infra in `docker-compose.e2e.yml`
# Use with: ENV_PATH=/absolute/path/to/.env.e2e npm run dev:api

NODE_ENV=development

# API
API_PORT=4000
API_HOST=0.0.0.0
API_BODY_LIMIT=65536
ALLOWED_ORIGIN=*
SCAN_MAX_PAGES=50
SCAN_TIMEOUT_MS=45000
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60000

# Queue (Docker compose)
REDIS_URL=redis://localhost:16379

# DB (Docker compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:15432/wcag

# AI (optional)
# ANTHROPIC_API_KEY=sk-ant-REPLACE_ME
# CLAUDE_MODEL=claude-sonnet-4-20250514
# CLAUDE_MAX_TOKENS=1024

# Storage (MinIO; Docker compose)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=wcag-artifacts

# Frontend (web)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000


